{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,

    "useDefineForClassFields": true,
    // "strict": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "allowJs": true,

    // https://twitter.com/housecor/status/1768283265889136835
    "noUncheckedIndexedAccess": true,

    "paths": {
      "@/*": ["./*"],
    },

    // tsconfig.node.json
    "composite": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.svelte",
    "vite.config.js",
    "package.json",
  ],
  "exclude": ["./src/public/*", "./src/system-notes.ts"],
}
